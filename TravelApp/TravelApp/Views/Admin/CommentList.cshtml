@model List<TravelApp.Models.Classes.Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Comment</th>
        <th>BlogId</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Username</td>
            <td>@x.Email</td>
            <td>@x.UserComment</td>
            <td>@x.Blog.Title</td>
            <td><a href="/Admin/CommentRemove/@x.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/BringComment/@x.Id" class="btn btn-warning">Update</a></td>
        </tr>
    }



</table>

